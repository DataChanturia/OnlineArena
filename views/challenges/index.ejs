<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To OnlineArena</h1>
            <p>View all challenges & participate!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/challenges/new">Add new challenge</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <div class='col-md-12'>
            <h3><%= message %></h3>
        </div>
        <% challenges = challenges.sort(function(part1, part2){return Number(part2.startDate) - Number(part1.startDate)}); %>
        <% for(var i = 0; i < challenges.length; i++) { %>
            <div class='col-md-3 col-sm-6'>
                <div class="thumbnail">
                    <img style="width:100%;" src="<%= challenges[i].coverImage %>">
                    <div style="word-wrap: break-word;" class='caption'>
                        <h4><strong><%= challenges[i].name %></strong></h4>
                    </div>
                    <p>
                        <%= challenges[i].description %>
                    </p>
                    <p>
                        <% if(challenges[i].ended == "true"){ %>
                            <a href="/challenges/<%= challenges[i]._id %>/" class="btn btn-primary btn-sm">Challenge ended - See stats</a>
                        <% } else { %>
                        <div class="row">
                            <div class='col-md-12'>
                                <p><a href="/challenges/<%= challenges[i]._id %>" class="btn btn-primary btn-sm btn-block">More Info</a></p>
                            </div>
                            <div class='col-md-6'>
                                <a href="/challenges/<%= challenges[i]._id %>/participate" class="btn btn-success btn-sm btn-block">Participate</a>
                            </div>
                            <div class='col-md-6'>
                                <a href="/challenges/<%= challenges[i]._id %>/vote" class="btn btn-success btn-sm btn-block">Vote</a>
                            </div>
                        </div>
                        <% } %>
                    </p>
                </div>
            </div>
        <% } %>
    </div>
</div>

<% include ../partials/footer %>