<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">OnlineArena</p>
            <div class="list-group">
                <li class="list-group-item active">1</li>
                <li class="list-group-item">2</li>
                <li class="list-group-item">3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= challenge.coverImage %>">
                <div class="caption-full">
                    <h4 class="pull-right">$9.00/night </h4>
                    <h4><a><%= challenge.name %></a></h4>
                    <p><%= challenge.description %></p>
                    <p>
                        <em>Created by <%= challenge.author.username %></em>
                    </p>
                    <% if(currentUser && challenge.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/challenges/<%= challenge._id %>/edit">Edit</a>
                        <form id="delete-form" action="/challenges/<%= challenge._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/challenges/<%= challenge._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% challenge.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <a class="btn btn-xs btn-warning" 
                                    href="/challenges/<%= challenge._id %>/comments/<%= comment._id %>/edit">Edit
                                </a>
                                <form id="delete-form" action="/challenges/<%= challenge._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
                                    <input type='submit' class="btn btn-xs btn-danger" value="Delete">
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>