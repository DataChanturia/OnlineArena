<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class='centeredText'>Add the image in "<%= challenge.name %>" challenge</h1>
        <div class='inputDiv'>
            <form action="/challenges/<%= challenge._id %>/participate/<%= currentUser._id %>" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <!--<input class="form-control" type='text' name='image' placeholder='enter image location'>-->
                    <label for="image">Upload image: </label>
                    <input type='file' id='image' name='image' accept='image/*' required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/challenges">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>