<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= challenge.name %></h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/challenges/<%= challenge._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type='text' name='challenge[name]' value='<%= challenge.name %>'>
                </div>
                <div class="form-group">
                    <input class="form-control" type='number' name='challenge[duration]' value='<%= challenge.duration %>' min='1' step='1'>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type='file' id='image' name='challenge[coverImage]' accept='image/*'>
                </div>
                <div class="form-group">
                    <input class="form-control" type='text' name='challenge[description]' value='<%= challenge.description %>'>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/challenges">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>