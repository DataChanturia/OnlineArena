<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit profile</h1>
        <div style="width: 30%; margin: 25px auto">
            <form action="/users/<%= user._id %>?_method=PUT" method="POST">
                <div class='form-group' >
                    <input class='form-control' type="text" name="user[firstName]" placeholder="first name" value="<%= user.firstName %>">
                </div>
                <div class='form-group' >
                    <input class='form-control' type="text" name="user[lastName]" placeholder="last name" value="<%= user.lastName %>">
                </div>
                <div class='form-group' >
                    <input class='form-control' type="number" name="user[birthYear]" placeholder="year of birth" value="<%= user.birthYear %>">
                </div>
                <div class='form-group' >
                    <input class='form-control' type="text" name="user[gender]" placeholder="gender" value="<%= user.gender %>">
                </div>
                <div class='form-group' >
                    <input class='form-control' type="text" name="user[image]" placeholder="copy image location" value="<%= user.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/users/<%= user._id %>">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>