<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To OnlineArena</h1>
            <p>View all challenges & participate!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/challenges/new">Add new challenge</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% for(var i = 0; i < challenges.length; i++) { %>
            <div class='col-md-3 col-sm-6'>
                <div class="thumbnail">
                    <img style="width:100%;" src="<%= challenges[i].coverImage %>">
                    <div class='caption'>
                        <h4><%= challenges[i].name %></h4>
                    </div>
                    <p>
                        <a href="/challenges/<%= challenges[i]._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% } %>
    </div>
</div>

<% include partials/footer %>