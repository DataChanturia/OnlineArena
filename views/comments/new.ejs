<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class='centeredText'>Add New Comment to <%= challenge.name %></h1>
        <div class='inputDiv'>
            <form action="/challenges/<%= challenge._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type='text' name='comment[text]' placeholder='text'>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/challenges">Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>